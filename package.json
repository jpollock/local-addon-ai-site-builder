{
  "name": "@local/ai-site-builder",
  "productName": "AI Site Builder",
  "version": "0.0.1",
  "description": "AI-powered WordPress site scaffolding for Local",
  "main": "lib/main.js",
  "renderer": "lib/renderer.js",
  "author": "WP Engine",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build:prod",
    "build:dev": "tsc && node scripts/create-entry-points.js",
    "build:prod": "tsc --sourceMap && node scripts/create-entry-points.js",
    "clean": "rm -rf lib coverage",
    "watch": "tsc --watch",
    "install-addon": "node scripts/install-addon.js",
    "uninstall-addon": "node scripts/uninstall-addon.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":35,\"functions\":40,\"lines\":45,\"statements\":45}}'",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'",
    "prepare": "husky install",
    "version:patch": "npm version patch -m 'chore: bump version to %s'",
    "version:minor": "npm version minor -m 'chore: bump version to %s'",
    "version:major": "npm version major -m 'chore: bump version to %s'",
    "prepublishOnly": "npm run build",
    "package": "node scripts/package-addon.js",
    "validate-release": "node scripts/validate-release.js",
    "prerelease": "npm run build && npm run validate-release"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@getflywheel/local": "latest",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^16.14.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.0",
    "google-auth-library": "^10.5.0",
    "keytar": "^7.9.0",
    "openai": "^6.9.1",
    "zod": "^3.22.0"
  }
}
